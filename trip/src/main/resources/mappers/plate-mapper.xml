<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="plate">
	<resultMap id="plateMap" type="plate">
		<id column="content_Id" property="contentId"/>
		<result column="address" property="address"/>
		<result column="areacode" property="areacode"/>
		<result column="sigungucode" property="sigungucode"/>
		<result column="cat1" property="cat1"/>
		<result column="cat2" property="cat2"/>
		<result column="contenttype_Id" property="contenttypeId"/>
		<result column="firstImage" property="firstImage"/>
		<result column="mapx" property="mapx"/>
		<result column="mapy" property="mapy"/>
		<result column="title" property="title"/>
		<result column="tel" property="tel"/>
	</resultMap>
	
	<!-- 지역검색 -->
	<select id="searchPlate" resultMap="plateMap" parameterType="hashMap">
		SELECT * FROM PLATE WHERE CAT1=#{cat1} AND CAT2=#{cat2} AND AREACODE=#{areacode} AND SIGUNGUCODE=#{sigungucode}
	</select>
	<select id="searchPlateCount" resultType="_int">
		SELECT * FROM PLATE WHERE CAT1=#{CAT1} AND CAT2=#{CAT2} AND AREACODE=#{AREACODE} AND SIGUNGUCODE=#{SIGUNGUCODE}
	</select>
	
	
</mapper>
